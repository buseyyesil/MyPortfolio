@model MyPortfolio.Models.TblExperience
@{
    ViewBag.Title = "Deneyim Güncelle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>İş Deneyimi Güncelle</h2>

<form method="post">
    @Html.HiddenFor(x => x.ExperienceId)

    <label>Şirket Adı</label>
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
    <br />

    <label>Pozisyon</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = "4" })
    <br />

    <label>Başlama Tarihi</label>
    <input type="date" name="StarDate" value="@(Model.StarDate?.ToString("yyyy-MM-dd"))" class="form-control" />
    <br />

    <label>Bitiş Tarihi <small class="text-muted">(Devam ediyorsa boş bırakın)</small></label>
    <input type="date" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" class="form-control" />
    <br />

    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="/Experience/Index" class="btn btn-secondary">İptal</a>
</form>
