@model List<MyPortfolio.Models.TblSocialMedia>
@{
    ViewBag.Title = "Sosyal Medya";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Sosyal Medya Hesaplarım</h2>
<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Platform</th>
        <th>URL</th>
        <th>İşlemler</th>
    </tr>

    @{int count = 0;}
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>
                <strong>@item.Name</strong>
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Url))
                {
                    <a href="@item.Url" target="_blank" class="btn btn-outline-info btn-sm">
                        <i class="fa fa-external-link-alt"></i> Ziyaret Et
                    </a>
                }
                else
                {
                    <span class="text-muted">URL Yok</span>
                }
            </td>
            <td>
                <a href="/SocialMedia/Update/@item.SocialMediaId" class="btn btn-outline-warning btn-sm">Düzenle</a>
                <a href="/SocialMedia/Delete/@item.SocialMediaId" class="btn btn-outline-danger btn-sm"
                   onclick="return confirm('Bu sosyal medya hesabını silmek istediğinizden emin misiniz?')">Sil</a>
            </td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <p>Henüz sosyal medya hesabı eklenmemiş.</p>
        <p><small>Instagram, LinkedIn, GitHub, Twitter gibi hesaplarınızı ekleyebilirsiniz.</small></p>
    </div>
}

<br />
<a href="/SocialMedia/Create" class="btn btn-primary">Yeni Sosyal Medya Hesabı Ekle</a>
